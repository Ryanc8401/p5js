    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.6.0/p5.js"></script>
    <script>
     function setup() {
  createCanvas(600, 600);
  //pizza
  fill(210,105,30)
  ellipse(300,300,400,400)//crust
  fill(255,180,94)
  ellipse(300,300,350,350)//pie
  //the lines of the pizza
  line(300,125,300,475)
  line(125,300,475,300)
  line(180,426,419,172)
  line(180,171,415,430)
	fill(0)
  text("Drag to add cheese, Click to add pepperoni, and C to closed the pizza", 85,85)

}

function draw() {
  //background(220);


}

function mousePressed(){
  //pepperoni
  fill(255,0,0)
  ellipse(mouseX,mouseY,50,50)
}
function mouseDragged(){
  //cheese
  fill("white")
  rect(mouseX,mouseY,random(1,3),random(3,5))
}

function keyTyped() { 
  if (key === 'c') {
    //box cover
  	fill(255)
      rectMode(CENTER)
    rect(300,300,400,400)
    fill(0)
    rect(350,350,50,50)
    fill(255)
    rect(300,350,50,50)
    fill(0)
    rect(250,350,50,50)
    fill(255)
    rect(250,400,50,50)
    fill(0)
    rect(300,400,50,50)
    fill(255)
    rect(350,400,50,50)
    fill("red")
    textSize(64)
    text("Pizza", 220, 250)
    //background
  } else {
    //change color of the background
    background(random(255),random(150,170),random(85,95))
  fill(210,105,30)
  ellipse(300,300,400,400)
  fill(232,60,0)
  ellipse(300,300,350,350)
  line(300,125,300,475)
  line(125,300,475,300)
  line(180,426,419,172)
  line(180,171,415,430)
  }
 }
    </script>
</head>

